<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Table width="auto" updateFinished="onListUpdateFinished" busyIndicatorDelay="{detailView>/lineItemTableDelay}"
		class="sapUiResponsiveMargin" items="{AIWAPPROVE>/characteristics}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>characteristics}"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="{i18n>class}"/>
			</Column>
			<Column>
				<Text text="{i18n>charName}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Tablet">
				<Text text="{i18n>charDesc}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Tablet">
				<Text text="{i18n>charValue}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{AIWAPPROVE>Class}"></Text>
					<Text text="{AIWAPPROVE>CharName}"></Text>
					<Text text="{AIWAPPROVE>Atnam}"></Text>
					<Text text="{AIWAPPROVE>Textbez}"></Text>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>